<h1>Flickr albums</h1>

<table>
  <tr>
    <th>Movie Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= link_to album.name, album %></td>
    <td><%= link_to 'Add Photos', album_new_photo_path(:album_id => album.id) %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

